---
layout: collection
---
<section class="block text-justify p-b-0">
  <h1 class="block-title">
    Articles tagged '<%= name %>'
  </h1>

  <% if description %>
    <div class="lead">
      <%= markdown description %>
    </div>
  <% end %>

</section>

<%= partial 'articles', locals: { articles: articles_for_tag(name) } %>
