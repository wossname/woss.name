<% if (updated_on = article.data.updated_on) %>
  Published <%= time_tag article.data.published_on, itemprop: 'dateCreated datePublished', class: 'op-published' %>
  (updated <%= time_tag updated_on, itemprop: 'dateModified', class: 'op-modified' %>)
  <meta itemprop="copyrightYear" content="<%= updated_on.year %>">
<% else %>
  Published <%= time_tag article.data.published_on, itemprop: 'dateCreated datePublished dateModified', class: 'op-published op-modified' %>
  <meta itemprop="copyrightYear" content="<%= article.data.published_on.year %>">
<% end %>
